{
  "compilerOptions": {
    "outDir": "./dist", 
    "rootDir": "./src", 
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react-jsx",
    "declaration": true, 
    "declarationDir": "./dist/types", 
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "__tests__"] 
}
